http://localhost {
    rewrite /admin /admin/

    handle /api* {
        reverse_proxy backend:8000
    }

    handle /static* {
        reverse_proxy backend:8000
    }

    handle /admin* {
        reverse_proxy backend:8000
    }

    handle {
        root * /static
        try_files {path} index.html
        file_server
    }
}
